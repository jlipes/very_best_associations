<div class="page-header">
  <h3>User #<%= @user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Username</dt>
      <dd><%= @user.username %></dd>

      <dt>Favorites</dt>
      <dd>
        <ul class="list-group">
        <% @user.favorites.each do |favorite| %>
          <li class="list-group-item">
            <%= favorite.dish.name %>  at <%= favorite.venue.name %>
          </li>
        <% end %>

<li class="list-group-item">
            <form action="/create_favorite" method="post">
              <!-- Hidden input for authenticity token to protect from forgery -->
              <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

              <!-- Label and input for dish -->
              <div class="form-group">
                <label for="dish" class="control-label">
                  Dish
                </label>
                <%= select_tag(:dish_id, options_from_collection_for_select(Dish.all, :id, :name, @favorite.dish_id), :class => "form-control") %>
              </div>

              <!-- Label and input for venue -->
              <div class="form-group">
                <label for="venue" class="control-label">
                  Venue
                </label>
                <%= select_tag(:venue_id, options_from_collection_for_select(Venue.all, :id, :name, @favorite.venue_id), :class => "form-control") %>
              </div>

              <!-- Label and input for notes -->
              <div class="form-group">
                <label for="note" class="control-label">
                  Notes
                </label>
                <input type="text" id="notes" name="notes" placeholder="Notes" class="form-control" value="<%= @favorite.notes %>">
              </div>

              <!-- Label and input for user_id -->
              <input name="user_id" type="hidden" value="<%= @user.id %>">

              <button class="btn btn-success">
                Create Favorite
              </button>
              or
              <a href="/users">Cancel</a>
            </form>
          </li>


        </ul>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary">
        Back
      </a>
      <a href="/users/<%= @user.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_user/<%= @user.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
